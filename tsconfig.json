{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,          // ðŸ‘ˆ IMPORTANT: must be false (or removed)
    "jsx": "react-jsx"        // ðŸ‘ˆ so TS knows how to handle .tsx
  },
  "include": ["src"]
}
